<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body class="bodyLogin">
    <%- include('../partials/header') %>
    <div class="formulario">
        <form  action="/register" method="POST" class="form-container">
            <h2 class="h2Login">Bienvenido !</h2>
            
            <div>
                <div class="form-content">
                    <i class="fas fa-user"></i>
                    <input class="form-inputs" type="text" name="userName" placeholder="User name" required>
                </div>
        
                <div class="form-content">
                    <i class="fas fa-envelope"></i>
                    <input class="form-inputs" type="email" name="userEmail" placeholder="E-mail" required>
                </div>
        
                <div class="form-content">
                    <i class="fas fa-lock"></i>
                    <input class="form-inputs" type="password" name="userPassword" placeholder="Password" required>
                </div>
                <div class="remember-me">
                    <input type="checkbox" name="rememberm-me" value="rememberMe" id="remember-me">
                    <label for="remember-me"> Recordar cuenta</label>
                </div>

                <div class="forgot-pass"><a href="#">Olvidó su contraseña?</a></div>

                <div class="buttons">
                    <button  class="login-button" type="submit"> <i class="fas fa-arrow-right"></i>Sign Up</button>
                <form  action="/login" method="POST" class="form-container">
                    <button  class="login-button" type="submit"><i class="fas fa-plus"></i>Login</button>
                </form>
            </div>

                <div class="buttons-social-media">
                    <button  class="login-button-social-media" type="submit">Log in with Google</button>
                    <button  class="login-button-social-media" type="submit">Log in with Facebook</button>
                </div>
    
            </div>

        </form>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>